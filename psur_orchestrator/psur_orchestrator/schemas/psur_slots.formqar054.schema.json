{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "psur_slots.formqar054.schema.json",
  "title": "PSUR Slot Obligations Schema - FormQAR-054_C",
  "type": "object",
  "required": ["meta", "slots"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["template_id", "template_name", "versioning_policy", "jurisdictions"],
      "properties": {
        "template_id": { "type": "string", "const": "FormQAR-054_C" },
        "template_name": { "type": "string" },
        "versioning_policy": {
          "type": "object",
          "required": ["psur_reference_number", "psur_version_number", "data_collection_period"],
          "properties": {
            "psur_reference_number": { "type": "string" },
            "psur_version_number": { "type": "string" },
            "data_collection_period": {
              "type": "object",
              "required": ["start_date", "end_date"],
              "properties": {
                "start_date": { "type": "string", "format": "date" },
                "end_date": { "type": "string", "format": "date" }
              }
            }
          }
        },
        "jurisdictions": {
          "type": "array",
          "items": { "type": "string", "enum": ["EU_MDR", "UK"] },
          "minItems": 1
        }
      }
    },
    "slots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "slot_id",
          "path",
          "title",
          "section",
          "prompt_intent",
          "data_type",
          "cardinality",
          "requiredness",
          "obligation_refs",
          "trace_policy"
        ],
        "properties": {
          "slot_id": { "type": "string" },
          "path": { "type": "string", "description": "Dot-path used by generators/formatters." },
          "title": { "type": "string" },
          "section": { "type": "string", "enum": ["COVER", "A", "B", "C", "D", "E", "F", "G", "H", "I", "J", "K", "L", "M"] },
          "prompt_intent": { "type": "string", "description": "What the slot is supposed to express/answer." },
          "data_type": {
            "type": "string",
            "enum": ["string", "boolean", "date", "enum", "integer", "number", "object", "array", "table"]
          },
          "cardinality": { "type": "string", "enum": ["1", "0..1", "0..n", "1..n"] },
          "requiredness": {
            "type": "object",
            "required": ["base", "conditional_rules"],
            "properties": {
              "base": { "type": "string", "enum": ["required", "optional", "conditional"] },
              "conditional_rules": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["if", "then"],
                  "properties": {
                    "if": { "type": "string", "description": "Boolean expression over context." },
                    "then": { "type": "string", "description": "required|optional|forbidden" }
                  }
                }
              }
            }
          },
          "obligation_refs": {
            "type": "array",
            "items": { "type": "string" },
            "description": "IDs in mapping file obligation catalog."
          },
          "trace_policy": {
            "type": "object",
            "required": ["trace_level", "evidence_minimum", "decision_minimum"],
            "properties": {
              "trace_level": { "type": "string", "enum": ["ultra_atomic"] },
              "evidence_minimum": {
                "type": "array",
                "items": { "type": "string", "enum": ["source_pointer", "query_params", "filters", "transform_steps", "aggregation_math", "exclusions_and_justification"] }
              },
              "decision_minimum": {
                "type": "array",
                "items": { "type": "string", "enum": ["why_this_source", "why_this_method", "assumptions", "uncertainty_statement", "compliance_check_result"] }
              }
            }
          }
        }
      }
    }
  }
}
