{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "psur_slots.mdcg_annexI.schema.json",
  "title": "PSUR Slot Obligations Schema - MDCG 2022-21 Annex I",
  "type": "object",
  "required": ["meta", "slots"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["template_id", "template_name", "core_principles"],
      "properties": {
        "template_id": { "type": "string", "const": "MDCG_2022_21_ANNEX_I" },
        "template_name": { "type": "string" },
        "core_principles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Stand-alone PSUR; summarize PMS outputs; justify omissions; highlight benefit-risk profile impact."
        }
      }
    },
    "slots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "slot_id",
          "path",
          "title",
          "mdcg_anchor",
          "prompt_intent",
          "data_type",
          "cardinality",
          "requiredness",
          "obligation_refs",
          "trace_policy"
        ],
        "properties": {
          "slot_id": { "type": "string" },
          "path": { "type": "string" },
          "title": { "type": "string" },
          "mdcg_anchor": { "type": "string", "description": "Human label for Annex I section/paragraph." },
          "prompt_intent": { "type": "string" },
          "data_type": { "type": "string", "enum": ["string", "boolean", "date", "enum", "integer", "number", "object", "array", "table"] },
          "cardinality": { "type": "string", "enum": ["1", "0..1", "0..n", "1..n"] },
          "requiredness": {
            "type": "object",
            "required": ["base", "conditional_rules"],
            "properties": {
              "base": { "type": "string", "enum": ["required", "optional", "conditional"] },
              "conditional_rules": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["if", "then"],
                  "properties": {
                    "if": { "type": "string" },
                    "then": { "type": "string" }
                  }
                }
              }
            }
          },
          "obligation_refs": { "type": "array", "items": { "type": "string" } },
          "trace_policy": {
            "type": "object",
            "required": ["trace_level", "must_justify_omissions"],
            "properties": {
              "trace_level": { "type": "string", "enum": ["ultra_atomic"] },
              "must_justify_omissions": { "type": "boolean", "const": true }
            }
          }
        }
      }
    }
  }
}
